[user]
	name = admond tamang
	email = admondtamang@gmail.com

[init]
    defaultBranch = main

[pull]
    ff = only

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[alias]
    lg = log --oneline --graph --decorate --all
    lb = git branch --sort=-committerdate | head -n 1
